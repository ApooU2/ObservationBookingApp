{
  "version": 2,
  "name": "observatory-booking-frontend",
  "framework": null,
  "buildCommand": "npm --prefix apps/frontend install && npm --prefix apps/frontend run build",
  "outputDirectory": "apps/frontend/build",
  "installCommand": "",
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://your-backend-api.com/api",
    "SKIP_PREFLIGHT_CHECK": "true",
    "DISABLE_ESLINT_PLUGIN": "true"
  },
  "rewrites": [
    {
      "source": "/((?!api|_next|static|favicon.ico|manifest.json|sw.js).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(html|js|css|json))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
